<div class="max-w-2xl mx-auto animate-fade-in">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to tasks_path, class: "inline-flex items-center gap-2 text-stone-500 dark:text-slate-400 hover:text-terracotta dark:hover:text-terracotta-light transition-colors duration-200" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to all tasks
    <% end %>
  </div>

  <!-- Task Card -->
  <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-sm rounded-2xl shadow-lg border border-stone-200/50 dark:border-slate-700/50 overflow-hidden">
    <!-- Header -->
    <div class="px-6 py-5 border-b border-stone-100 dark:border-slate-700 bg-gradient-to-r from-stone-50 dark:from-slate-700/50 to-transparent">
      <div class="flex items-start justify-between gap-4">
        <div class="flex-1">
          <h1 class="font-display text-2xl sm:text-3xl font-bold text-stone-800 dark:text-stone-100 <%= 'line-through opacity-60' if @task.completed? %>">
            <%= @task.title %>
          </h1>
          <p class="text-sm text-stone-500 dark:text-slate-400 mt-1">
            Created <%= time_ago_in_words(@task.created_at) %> ago
          </p>
        </div>

        <!-- Status Badge -->
        <% if @task.completed? %>
          <span class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium rounded-full bg-sage/20 dark:bg-sage/10 text-sage-dark dark:text-sage-light border border-sage/30 dark:border-sage/20">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Completed
          </span>
        <% else %>
          <span class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium rounded-full bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 border border-amber-200 dark:border-amber-800/50">
            <span class="w-2 h-2 rounded-full bg-amber-500 animate-pulse-soft"></span>
            In Progress
          </span>
        <% end %>
      </div>
    </div>

    <!-- Content -->
    <div class="p-6 space-y-6">
      <!-- Meta Information -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <!-- Priority -->
        <div class="bg-stone-50 dark:bg-slate-700/50 rounded-xl p-4">
          <label class="block text-xs font-medium text-stone-500 dark:text-slate-400 uppercase tracking-wider mb-2">Priority</label>
          <% priority_colors = case @task.priority
               when 3 then 'text-red-600 dark:text-red-400'
               when 2 then 'text-amber-600 dark:text-amber-400'
               else 'text-stone-600 dark:text-slate-300'
             end %>
          <div class="flex items-center gap-2 <%= priority_colors %>">
            <% if @task.priority == 3 %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
              </svg>
            <% elsif @task.priority == 2 %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            <% else %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
              </svg>
            <% end %>
            <span class="font-semibold text-lg"><%= @task.priority_name %></span>
          </div>
        </div>

        <!-- Due Date -->
        <div class="bg-stone-50 dark:bg-slate-700/50 rounded-xl p-4">
          <label class="block text-xs font-medium text-stone-500 dark:text-slate-400 uppercase tracking-wider mb-2">Due Date</label>
          <% if @task.due_date.present? %>
            <% due_classes = if @task.overdue?
                 'text-red-600 dark:text-red-400'
               elsif @task.due_soon?
                 'text-amber-600 dark:text-amber-400'
               else
                 'text-stone-700 dark:text-slate-200'
               end %>
            <div class="flex items-center gap-2 <%= due_classes %>">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="font-semibold text-lg"><%= @task.due_date.strftime("%B %d, %Y") %></span>
              <% if @task.overdue? && !@task.completed? %>
                <span class="text-xs font-medium px-2 py-0.5 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-full">Overdue</span>
              <% elsif @task.due_soon? && !@task.completed? %>
                <span class="text-xs font-medium px-2 py-0.5 bg-amber-100 dark:bg-amber-900/30 text-amber-600 dark:text-amber-400 rounded-full">Due Soon</span>
              <% end %>
            </div>
          <% else %>
            <span class="text-stone-400 dark:text-slate-500 italic">No due date set</span>
          <% end %>
        </div>
      </div>

      <!-- Description -->
      <div>
        <label class="block text-xs font-medium text-stone-500 dark:text-slate-400 uppercase tracking-wider mb-2">Description</label>
        <% if @task.description.present? %>
          <div class="prose prose-stone dark:prose-invert max-w-none">
            <p class="text-stone-700 dark:text-slate-300 leading-relaxed whitespace-pre-wrap"><%= @task.description %></p>
          </div>
        <% else %>
          <p class="text-stone-400 dark:text-slate-500 italic">No description provided</p>
        <% end %>
      </div>

      <!-- Timestamps -->
      <div class="pt-4 border-t border-stone-100 dark:border-slate-700 flex flex-wrap gap-x-6 gap-y-2 text-sm text-stone-500 dark:text-slate-400">
        <div>
          <span class="font-medium">Created:</span> <%= @task.created_at.strftime("%b %d, %Y at %I:%M %p") %>
        </div>
        <div>
          <span class="font-medium">Updated:</span> <%= @task.updated_at.strftime("%b %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>

    <!-- Actions Footer -->
    <div class="px-6 py-4 bg-stone-50 dark:bg-slate-700/50 border-t border-stone-100 dark:border-slate-700 flex flex-wrap items-center justify-between gap-3">
      <!-- Toggle Complete -->
      <%= button_to toggle_complete_task_path(@task), method: :patch, 
          class: "inline-flex items-center gap-2 px-4 py-2 font-medium rounded-full transition-all duration-200 #{@task.completed? ? 'bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-400 hover:bg-amber-200 dark:hover:bg-amber-900/50' : 'bg-sage text-white hover:bg-sage-dark shadow-sm'}",
          data: { turbo_method: :patch } do %>
        <% if @task.completed? %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Mark Incomplete
        <% else %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          Mark Complete
        <% end %>
      <% end %>

      <div class="flex items-center gap-2">
        <%= link_to edit_task_path(@task), 
            class: "inline-flex items-center gap-2 px-4 py-2 bg-white dark:bg-slate-600 text-stone-700 dark:text-slate-200 font-medium rounded-full border border-stone-200 dark:border-slate-500 hover:bg-stone-50 dark:hover:bg-slate-500 hover:border-stone-300 dark:hover:border-slate-400 transition-all duration-200" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>

        <%= button_to task_path(@task), method: :delete, 
            class: "inline-flex items-center gap-2 px-4 py-2 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 font-medium rounded-full border border-red-200 dark:border-red-800/50 hover:bg-red-100 dark:hover:bg-red-900/30 hover:border-red-300 dark:hover:border-red-700 transition-all duration-200",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task? This action cannot be undone." } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="space-y-6 animate-fade-in">
  <!-- Page Header -->
  <div class="text-center mb-8">
    <h2 class="font-display text-3xl sm:text-4xl font-bold text-stone-800 mb-2">Your Tasks</h2>
    <p class="text-stone-500">Stay organized, stay productive</p>
  </div>

  <!-- Filters and Sorting Controls -->
  <div class="bg-white/60 backdrop-blur-sm rounded-2xl shadow-sm border border-stone-200/50 p-4 sm:p-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <!-- Filter Tabs -->
      <div class="flex items-center gap-1 p-1 bg-stone-100 rounded-xl">
        <%= link_to tasks_path(sort: params[:sort]),
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:filter].blank? ? 'bg-white text-stone-800 shadow-sm' : 'text-stone-500 hover:text-stone-700'}" do %>
          All
          <span class="ml-1.5 text-xs px-1.5 py-0.5 rounded-full <%= params[:filter].blank? ? 'bg-terracotta/10 text-terracotta' : 'bg-stone-200 text-stone-500' %>">
            <%= Task.count %>
          </span>
        <% end %>
        
        <%= link_to tasks_path(filter: "active", sort: params[:sort]),
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:filter] == 'active' ? 'bg-white text-stone-800 shadow-sm' : 'text-stone-500 hover:text-stone-700'}" do %>
          Active
          <span class="ml-1.5 text-xs px-1.5 py-0.5 rounded-full <%= params[:filter] == 'active' ? 'bg-terracotta/10 text-terracotta' : 'bg-stone-200 text-stone-500' %>">
            <%= Task.active.count %>
          </span>
        <% end %>
        
        <%= link_to tasks_path(filter: "completed", sort: params[:sort]),
            class: "px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 #{params[:filter] == 'completed' ? 'bg-white text-stone-800 shadow-sm' : 'text-stone-500 hover:text-stone-700'}" do %>
          Completed
          <span class="ml-1.5 text-xs px-1.5 py-0.5 rounded-full <%= params[:filter] == 'completed' ? 'bg-sage/20 text-sage-dark' : 'bg-stone-200 text-stone-500' %>">
            <%= Task.completed.count %>
          </span>
        <% end %>
      </div>

      <!-- Sort Dropdown -->
      <div class="flex items-center gap-2">
        <span class="text-sm text-stone-500">Sort by:</span>
        <div class="relative">
          <select onchange="window.location.href = this.value" 
                  class="appearance-none bg-white border border-stone-200 rounded-lg pl-3 pr-8 py-2 text-sm text-stone-700 focus:outline-none focus:ring-2 focus:ring-terracotta/20 focus:border-terracotta cursor-pointer">
            <option value="<%= tasks_path(filter: params[:filter], sort: 'created_at') %>" <%= 'selected' if params[:sort].blank? || params[:sort] == 'created_at' %>>
              Newest First
            </option>
            <option value="<%= tasks_path(filter: params[:filter], sort: 'due_date') %>" <%= 'selected' if params[:sort] == 'due_date' %>>
              Due Date
            </option>
            <option value="<%= tasks_path(filter: params[:filter], sort: 'priority') %>" <%= 'selected' if params[:sort] == 'priority' %>>
              Priority (High â†’ Low)
            </option>
          </select>
          <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
            <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tasks List -->
  <% if @tasks.any? %>
    <div class="space-y-3">
      <% @tasks.each_with_index do |task, index| %>
        <div class="group bg-white/80 backdrop-blur-sm rounded-xl shadow-sm border border-stone-200/50 overflow-hidden hover:shadow-md hover:border-stone-300/50 transition-all duration-200 animate-slide-up"
             style="animation-delay: <%= index * 50 %>ms">
          <div class="flex items-start gap-4 p-4 sm:p-5">
            <!-- Toggle Complete Button -->
            <%= button_to toggle_complete_task_path(task), method: :patch, 
                class: "flex-shrink-0 mt-0.5 focus:outline-none focus:ring-2 focus:ring-terracotta/20 rounded-lg",
                data: { turbo_method: :patch } do %>
              <% if task.completed? %>
                <div class="w-6 h-6 rounded-lg bg-gradient-to-br from-sage to-sage-dark flex items-center justify-center shadow-sm">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
              <% else %>
                <div class="w-6 h-6 rounded-lg border-2 border-stone-300 hover:border-terracotta transition-colors duration-200"></div>
              <% end %>
            <% end %>

            <!-- Task Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-3">
                <div class="flex-1 min-w-0">
                  <h3 class="font-medium text-stone-800 truncate <%= 'line-through text-stone-400' if task.completed? %>">
                    <%= task.title %>
                  </h3>
                  
                  <!-- Task Meta -->
                  <div class="flex flex-wrap items-center gap-2 mt-2">
                    <!-- Priority Badge -->
                    <% priority_classes = case task.priority
                         when 3 then 'bg-red-100 text-red-700 border-red-200'
                         when 2 then 'bg-amber-100 text-amber-700 border-amber-200'
                         else 'bg-stone-100 text-stone-600 border-stone-200'
                       end %>
                    <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium rounded-full border <%= priority_classes %>">
                      <% if task.priority == 3 %>
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/>
                        </svg>
                      <% end %>
                      <%= task.priority_name %>
                    </span>

                    <!-- Due Date -->
                    <% if task.due_date.present? %>
                      <% due_classes = if task.overdue?
                           'bg-red-50 text-red-600 border-red-200'
                         elsif task.due_soon?
                           'bg-amber-50 text-amber-600 border-amber-200'
                         else
                           'bg-stone-50 text-stone-500 border-stone-200'
                         end %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium rounded-full border <%= due_classes %>">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <%= task.due_date.strftime("%b %d, %Y") %>
                        <% if task.overdue? %>
                          <span class="text-red-500">(Overdue)</span>
                        <% end %>
                      </span>
                    <% end %>

                    <!-- Completed Badge -->
                    <% if task.completed? %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs font-medium rounded-full bg-sage/20 text-sage-dark border border-sage/30">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Completed
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                  <%= link_to task_path(task), 
                      class: "p-2 text-stone-400 hover:text-terracotta hover:bg-terracotta/10 rounded-lg transition-colors duration-200",
                      title: "View" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>

                  <%= link_to edit_task_path(task), 
                      class: "p-2 text-stone-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition-colors duration-200",
                      title: "Edit" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>

                  <%= button_to task_path(task), method: :delete, 
                      class: "p-2 text-stone-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200",
                      title: "Delete",
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" } do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-gradient-to-br from-stone-100 to-stone-200 flex items-center justify-center">
        <svg class="w-10 h-10 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
      </div>
      <h3 class="font-display text-xl font-semibold text-stone-700 mb-2">No tasks yet</h3>
      <p class="text-stone-500 mb-6">
        <% if params[:filter] == "completed" %>
          You haven't completed any tasks yet. Keep going!
        <% elsif params[:filter] == "active" %>
          All caught up! No active tasks remaining.
        <% else %>
          Start by creating your first task to stay organized.
        <% end %>
      </p>
      <%= link_to new_task_path, 
          class: "inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-terracotta to-terracotta-dark text-white font-medium rounded-full shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
        </svg>
        Create Your First Task
      <% end %>
    </div>
  <% end %>
</div>
